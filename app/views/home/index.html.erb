<h1>CSCI 133</h1>

<form action="<%= home_index_url %>" method="GET">
<input  
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>"
></input>

<label>First Name
<input type="text" name="name[first]" value="<%=  %>"></input>
</label>

<label>Last Name
<input type="text" name="name[last]" value="<%=  %>"></input>
</label>

<input type="submit" value="GO!"></input>
</form>


<% if @current %>
<p>Current Unit: <%= @current %></p>
<p><%= @timeoff %> out of 5 Time-off points</p>


  <table>
    <tr>
      <td>Date</td>
      <td>O</td>
      <td>H</td>
      <td>T</td>
      <td>U</td>
    </tr>
    
  <tr>
  <% @data.each_with_index do |item, index| %>
    <% if index % 5 == 0 && index != 0 %>
      </tr><tr>
    <% end %>
    <% if (index-1) % 5 == 0  %>
    <td class="timeoff"><%= item %></td>
    <% else %>
    <td><%= item %></td>
    <% end %>
  <% end %>
  </tr>
  
<% elsif @message %>  
  <p class="error"><%= @message %></p>
<% end %>
</table>