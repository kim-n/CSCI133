<% if @current_unit %>
<p class="name"><%= @name %></p>

<div class="user-info">
  <div class="summary">
    <p>CURRENT UNIT: <%= @current_unit %></p>
    <p>TIME-OFF PNTS: <%= @timeoff %> out of 5</p>
    
  </div>

  <table>
    <tr class="head">
      <td id="date">Date</td>
      <td>Time/Off</td>
      <td>Hours</td>
      <td>Test</td>
      <td>Unit</td>
    </tr>
  
  <tr>
  <% @data.each_with_index do |item, index| %>
    <% if index % 5 == 0 && index != 0 %>
      </tr><tr>
    <% end %>
    <% if (index-1) % 5 == 0  %>
    <td class="timeoff"><%= item %></td>
    <% else %>
    <td><%= item %></td>
    <% end %>
  <% end %>
  </tr>

  </table>

  <div class="note">
    <p>A: Absent</p>
    <p>L: Late</p>
    <p>H: Half</p>
  </div>
</div>
  
<% elsif @message %>  
  <p class="error"><%= @message %></p>
  
<% else %>

  <form action="<%= home_index_url %>" method="GET">
  <input  
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"
  ></input>

  <label>
  <input type="text" name="name[first]" placeholder="First name" value="<%=  %>"></input>
  </label>

  <label>
  <input type="text" name="name[last]" placeholder="Last name" value="<%=  %>"></input>
  </label>

  <input type="submit" value="GO!"></input>
  </form>

<% end %>
  <p class="updated">LAST UPDATED: <%= @updated %></p>

</div>

 <script>
 $(function() {
   
   var things = [];
   things =  <%= raw @dates.to_json %>;
   console.log(things);
   var num = 1;
   things.forEach(function(entry) {
     if (entry[1] == ''){
       $('.square:nth-child(' + num + ')').css('background-color', 'green');
     }
     else if(entry[1] == 'A'){
       $('.square:nth-child(' + num + ')').css('background-color', 'red'); 
     }
     else {
       $('.square:nth-child(' + num + ')').css('background-color', 'orange');
     }
     $('.square:nth-child(' + num + ')').text(entry[0]);
     num++;
   })
   
   $('.square').css('color', 'transparent');
   $(".square").hover(function(){
     
     if($(this).text() != '') {
       $(this).css('width', '63px');
     }
     $(this).css('color', 'white');
     },function(){
       $(this).css('width', '10px');
     $(this).css('color', 'transparent');
   }); 
 })
</script> 
